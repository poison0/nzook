<idea-plugin url="https://www.jetbrains.com/idea">
    <id>com.azure.wind.nzook</id>
    <name>nzook</name>
    <version>1.0.1</version>
    <idea-version since-build="222.3345.118"/>
    <vendor email="1570012077@qq.com" url="https://github.com/poison0/nzook">Azure Wind</vendor>
    <description><![CDATA[
        <ul>
            <li>
                <b>A zookeeper client</b>
                <ol>
                    <li>Provide a display of the zookeeper tree structure</li>
                    <li>Can create, edit, delete and copy nodes</li>
                    <li>Can view and edit node data, node metadata and control information</li>
                </ol>
            </li>
            <br>
            <a href="https://github.com/poison0/nzook">Github</a>
            <li>
                <b>一个 zookeeper 可视化工具</b>
                <ol>
                    <li>提供显示zookeeper的树结构</li>
                    <li>可以新建、编辑、删除和拷贝节点</li>
                    <li>可以查看和编辑节点数据、节点元数据和控制信息</li>
                </ol>
            </li>
        </ul>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.azure.nzook.action.ListWindowFactory" id="nzook" anchor="right" icon="Icons.nzookIcon" />
        <notificationGroup displayType="BALLOON" id="notify" />
    </extensions>
    <actions>

    </actions>
</idea-plugin>